<script>
        $(function(){
            $(".cir").click(function(){ 
                if($(this).is(":checked")){
                    $(this).siblings(".check-shopping").addClass("checked-shopping");
                }else{
                    $(this).siblings(".check-shopping").removeClass("checked-shopping");
                } 
            });

            // 初始化
            var n=0;
            $("span[name='smtotal']").each(function(){
                $(this).html(($(this).parent().siblings('.input').children("input").val())*($(this).parent().siblings('.p_2').children('span[name="price"]').html()));
                var html=$(this).html();
                
                html=+html;
                n+=html
                
            });
            $("#total").html(n)
            // 点击减号
            $(".reduce").click(function(){
                var val=$(this).next("input").val();
                if(val>0){
                    val--;
                    $(this).next("input").val(val);
                    $(this).parent().next("p").children("span").html(val*$(this).parent().prev("p").children("span").html());
                    calulate()
                }
            })
            // 点击加号
            $(".plus").click(function(){
                var val=$(this).prev("input").val();

                    val++;
                $(this).prev("input").val(val);
                $(this).parent().next("p").children("span").html(val*$(this).parent().prev("p").children("span").html());
                calulate()
            })
            // 小全选按钮
            //全选
            $('#checkAll').click(function(){
              if(this.checked){
                $("input[type='checkbox']").prop("checked",true).siblings('.check-shopping').addClass("checked-shopping");
                calulate();
              }else{
                $("input[type='checkbox']").prop("checked",false).siblings('.check-shopping').removeClass("checked-shopping");
                calulate();
              };
            })

            // 总计
            function calulate(){
                var n=0;
                $("span[name='smtotal']").each(function(ele,i){
                    var html=$(this).html();
                    html=+html;
                    n+=html
                });
               $("#total").html(n)
            }

        })
    </script>
